<div class="row">
  <div class="col-xs-12 col-lg-10 col-lg-offset-1">
    <div class="well">
             <center><h3 style= "margin-top: -15px"><b>Sign Up</b></h3></center>
     <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { 'parsley-validate' => ''},  defaults: { :input_html => {'data-parsley-required'=> 'true' , :data => {'parsley-trigger'=> 'blur'} } }) do |f| %>
        <%= devise_error_messages! %>
        <div class="row">
          <div class="col-xs-12 col-lg-10 col-lg-offset-1">
            <%= f.input :email %>
            <%= f.input :password %>
            <br/>
            <%= f.submit 'Sign Up', :class => "btn btn-primary"%>
            <br/>
            Already Registered? <%= link_to "Sign In", user_session_path %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<script type="text/javascript">
  $('#new_user').parsley();
</script>